<%= form_tag search_path do %>

  <%= image_submit_tag asset_path("search.png"), id: "search_button" %>
  <%= text_field_tag :search, previous_search %>

  <button type="button" id="advanced_search_button">Advanced Search options</button>

  <div id="advanced_search_options">
    <%= check_box :strict, "option", { checked: true }, true, false %>
    <%= text_field_tag :blogger, blogger_search %>
    <%= image_submit_tag asset_path("search.png"), id: "search_button" %>
  </div>

<% end %>
<% if blogger_search? && !blogger? %>

  Cannot find a blogger with username "<%= blogger_search %>"

<% elsif no_results? && blogger_search? %>

  No results found for "<%= previous_search %>" by "<%= blogger_search %>"

<% elsif no_results? %>

  No results found for "<%= previous_search %>"

<% elsif search_term? && blogger_search? %>

  Search Results For "<%= previous_search %>" By "<%= blogger_search %>":

  <%= render partial: "articles" %>

<% elsif search_term? %>

  Search Results For "<%= previous_search %>":
  
  <%= render partial: "articles" %>

<% else %>

  Please enter word/phrase to search.

<% end %>