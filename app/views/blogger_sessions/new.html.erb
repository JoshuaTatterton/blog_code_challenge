<%= form_tag blogger_sessions_path, method: :post, class: "o-sign_form" do |f| %>
  
  <div>
    <%= label_tag :email %>:
  </div>
  <div class="c-form__input">
    <%= text_field_tag :email, nil, class: "c-form__field" %>
  </div>

  <div>
    <%= label_tag :password %>:
  </div>
  <div class="c-form__input">
    <%= password_field_tag :password, nil, class: "c-form__field" %>
  </div>

  <%= link_to "Cancel", root_path, class: "c-btn c-form__btn c-form__btn--cancel" %>
  <%= submit_tag "Sign in", class: "c-btn c-form__btn" %>

<% end %>