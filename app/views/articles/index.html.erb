<% if blogger_signed_in? %>
  Would you like to post a blog article?
  <%= form_for @article do |f| %>
    <%= f.text_field :content %>
    <%= f.submit "Post Article" %>
  <% end %>
<% end %>

<% if @articles != [] %>
  <ul>
    <%= @articles.each do |article| %>
      <li>
        <%= markdown article.content %>
      </li>
    <% end %>
  </ul>
<% else %>
  No blog posts have been made.
<%end%>