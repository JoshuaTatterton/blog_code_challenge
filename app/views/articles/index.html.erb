<% if session[:user_signed_in] %>
  Would you like to post a blog article?
  <button id="new_article">
    New Article
  </button>
  <div class="article_writer">
    <%= form_for @article do |f| %>
      <%= f.text_field :title %>
      <%= f.text_field :content %>
      <%= f.submit "Post Article" %>
    <% end %>
  </div>
<% end %>

<% if @articles != [] %>
  <ul>
    <% @articles.each do |a| %>
      <li id="article_display_<%= a.id %>">
        <%= link_to "#{a.title}", article_path(a) %>
        <%= markdown a.content %>
        <% if session[:user_signed_in] %>
        <button class="edit_button" id="<%= a.id %>">
          Edit Article - <%= a.title %>
        </button>
        <% end %>
      </li>
      <li class="article_editor" id="article_editor_<%= a.id %>">
        <%= form_for a do |f| %>
          <%= f.text_field :content %>
          <%= f.submit "Edit Article" %>
        <% end %>
        <%= link_to "Delete Article", article_path(a), method: :delete %>
      </li>
    <% end %>
  </ul>
<% else %>
  No blog posts have been made.
<%end%>